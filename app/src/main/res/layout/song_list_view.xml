<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:background="#fafafa">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="71dp"
        android:id="@+id/relativeLayout2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/backimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toStartOf="@+id/mText2"
            android:scaleType="fitXY"
            android:src="@mipmap/music"
            android:transitionName="image" />

        <ImageView
            android:id="@+id/nouse"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/music"
            android:transitionName="image" />

        <TextView
            android:id="@+id/mText"
            android:transitionName="title"
            android:paddingTop="11dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="로딩중"
            android:textSize="15sp"
            android:textColor="#bb000000"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/mText2"
            android:layout_alignStart="@+id/mText2"
            android:lines="1"
            android:layout_marginTop="2dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:layout_toStartOf="@+id/imageButton3" />

        <TextView
            android:id="@+id/mText2"
            android:transitionName="artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#a6000000"
            android:layout_below="@+id/mText"
            android:layout_marginLeft="12dp"
            android:paddingTop="5dp"
            android:lines="1"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit ="marquee_forever"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:scrollHorizontally="true"
            android:text="asasd"
            android:layout_toEndOf="@+id/nouse" />

        <TextView
            android:id="@+id/mDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="1sp"
            android:textColor="#00000000"
            android:background="#00000000"
            android:layout_alignBaseline="@+id/mText2"
            android:layout_alignBottom="@+id/mText2"
            android:layout_toLeftOf="@+id/button"
            android:layout_toStartOf="@+id/button" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/mcheck"
            android:textColor="#00000000"
            android:text="dd"
            android:layout_marginRight="10dp"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:phoneNumber="true"
            android:focusable="false" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:background="#00000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/nouse"
            android:layout_toStartOf="@+id/imageButton3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="10sp"
            android:id="@+id/count"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/nouse"
            android:layout_alignRight="@+id/nouse"
            android:layout_alignEnd="@+id/nouse"
            android:textColor="#ffffff"
            android:gravity="bottom|right" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#31000000"
            android:layout_marginLeft="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/nouse"
            android:id="@+id/view4" />

        <ImageButton
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:id="@+id/imageButton3"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/more3"
            android:background="#00000000"
            android:scaleType="fitCenter"
            android:layout_marginRight="15dp"
            android:alpha="0.5" />

    </RelativeLayout>

</RelativeLayout>
